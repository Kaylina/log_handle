<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>mapreduce.framework.name</name>
        <value>yarn</value>
    </property>
    <property>
        <name>mapreduce.jobtracker.http.address</name>
        <value>master.hadoop.node:50030</value>
    </property>
    <property>
        <name>mapreduce.jobhistory.address</name>
        <value>master.hadoop.node:10020</value>
    </property>
    <property>
        <name>mapreduce.jobhistory.webapp.address</name>
        <value>master.hadoop.node:19888</value>
    </property>
    <property>
        <name>mapreduce.map.java.opts</name>
        <value>-server -Xmx2048m -Duser.timezone=UTC -Dfile.encoding=UTF-8</value>
    </property>
    <property>
        <name>mapreduce.reduce.java.opts</name>
        <value>-server -Xmx8192m -Duser.timezone=UTC -Dfile.encoding=UTF-8</value>
    </property>
    <property>
        <name>mapreduce.map.memory.mb</name>
        <value>2048</value>
    </property>
    <property>
        <name>mapreduce.reduce.memory.mb</name>
        <value>8192</value>
    </property>

</configuration>
